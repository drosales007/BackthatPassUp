<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.johnnycash.backthatpassup.MainActivity"
    tools:showIn="@layout/activity_main"
    android:background="#000000">

    <ImageButton
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:id="@+id/imageButton"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="76dp"
        android:background="@drawable/btpu"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Offense"
        android:id="@+id/offense"
        android:background="@color/popup"
        android:onClick="openOffense"
        android:textColor="@color/white"
        android:layout_below="@+id/imageButton"
        android:layout_toStartOf="@+id/space"
        android:layout_marginTop="68dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Defense"
        android:id="@+id/defense"
        android:background="@color/popup"
        android:onClick="openDefense"
        android:layout_alignTop="@+id/space"
        android:layout_toEndOf="@+id/space"
        android:textColor="@color/white"/>

    <Space
        android:layout_width="50dp"
        android:layout_height="20px"
        android:layout_alignTop="@+id/offense"
        android:layout_centerHorizontal="true"
        android:layout_alignBottom="@+id/offense"
        android:id="@+id/space"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Routes"
        android:id="@+id/button"
        android:layout_below="@+id/offense"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:background="@color/popup"
        android:layout_marginTop="20dp"
        android:onClick="openRouteTree"/>
</RelativeLayout>
